doctype html
html(lang='en', itemscope, itemtype='http://schema.org/Blog')
  head
    //- the view layout is useful to set metadata, a title, load scripts and styles
    //- and also global markup such as a navigation menu or layout structure
    //- http://taunus.bevacqua.io/getting-started#creating-a-layout
    
    //- every controller action should produce a view title
    title=model.title
    meta(charset='utf-8')
    link(rel='shortcut icon', href='/favicon.ico')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='/css/all.css')
    //-
     The != syntax below means that whatever is in the value assigned to the element won't be escaped. That's okay because partial is a view where Jade escaped anything that needed escaping, but we wouldn't want HTML tags to be escaped!
    //- the HTML for the partial view can be placed where needed
  body.sd-t-default(data-taunus='model')!=partial
    
  script(type='text/javascript').
    var wf, 
      s,
      i,
      numElements,
      currentElement,
      nojs;
      
    if ('querySelector' in document && 'localStorage' in window && 'addEventListener' in window) {
      // only add javascript if this is a capable browser
      wf = document.createElement('script');
      wf.src = '/js/all.js';
      wf.type = 'text/javascript';
      wf.async = 'true';
      s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(wf, s);
    }